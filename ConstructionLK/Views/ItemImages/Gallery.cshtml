@model List<ConstructionLK.Models.ItemImage>

@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gallery</h2>
<style>
    .img{
        width:auto;
        height:auto;
    }
</style>
<p>
    @Html.ActionLink("Upload New", "Upload",new {id= ViewBag.ItemId })
</p>
<table class="table row" width="1050">
    @{
        int j = 0;
        for (int i = 0; i < Model.Count(); i+=4)
        {
            j = i;
            <tr>
                @while (j < i+4 && j < Model.Count())
                {
                    
                    <td>
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageData,0,Model[j].ImageData.Length)" style="display: block;max-width:230px;max-height:95px;width: auto;height: auto;"/>
                    </td>
                    j++;
                }
            </tr>

        }
    }
</table>
