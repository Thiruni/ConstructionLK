@model ConstructionLK.Models.RatingsServiceProvider
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework

@{
    ViewBag.Title = "Create";
}


<h2>Create</h2>


@using (Html.BeginForm())
{ 
    @Html.AntiForgeryToken()
       <div class="form-horizontal">
            <h4>Rate this service</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <div class="">
                    <label class="">
                        @Html.RadioButtonFor(model => model.Rate, '1')
                        Poor
                    </label>
                </div>
                <div class="">
                    <label class="">
                        @Html.RadioButtonFor(model => model.Rate, '2')
                        Satisfied
                    </label>
                </div>
                <div class="">
                    <label class="">
                        @Html.RadioButtonFor(model => model.Rate, '3')
                        Good
                    </label>
                </div>
                <div class="">
                    <label class="">
                        @Html.RadioButtonFor(model => model.Rate, '4')
                        Very Good
                    </label>
                </div>
                <div class="">
                    <label class="">
                        @Html.RadioButtonFor(model => model.Rate, '5')
                        Excelent
                    </label>
                </div>

                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(model => model.PostUser, new { @Value = ViewBag.Postuser })
            @Html.HiddenFor(model => model.ReceivedUser, new { @Value = ViewBag.ReceivedUser })
            @Html.HiddenFor(model => model.RequestId, new { @Value = ViewBag.RequestId })


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-outline-warning btn-sm"/>
                </div>
            </div>
           </div>
        
 }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
   