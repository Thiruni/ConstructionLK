@model IEnumerable<ConstructionLK.Models.Complain>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ComplainedAbout)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComplainAction.Action)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComplainedDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ComplainedBy)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ComplainBody)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
        @Html.ActionLink(item.AspNetUser.Email, "DetailsById", "ServiceProviders", new { user = item.AspNetUser.Id }, null)</td>
        <td>
            @Html.DisplayFor(modelItem => item.ComplainAction.Action)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ComplainedDate)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ComplainedBy)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.ComplainBody)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
